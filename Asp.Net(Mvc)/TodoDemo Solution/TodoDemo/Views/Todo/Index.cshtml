@model List<Todo>
@{
}

<div >
    <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">Create Todo </a>
</div>
@if (Model.Count() > 0 )
 {
    <table class="table table-hover table-striped">
       <thead>
            <tr>
                <td>
                    id
                </td>
                <td>
                    name 
                </td>
                <td>
                    date
                </td>
                <td>
                    is Finished
                </td>
            </tr>
       </thead> 
    

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name 
                    </td>
                    <td>
                        @item.CreatedDate.Month
                    </td>
                    <td>
                        @item.isFinished
                    </td>
                    <td>
                        <a asp-controller="Todo" asp-action="Create" asp-route-id=@item.Id class="btn btn-info"> Update </a>
                    </td>
                    <td>
                        <a asp-controller="Todo" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"> delete </a>

                    </td>

                </tr>
            }
            
        </tbody>
</table>
    }
    else
    {
        <div class=" mt-4  bg-light">
               <h3>no Todos are Available </h3> 
        </div>
    }
