@{
}

<h2> Employee List </h2>
<a asp-action="Create" class="btn btn-primary"> Create New Employee</a>
<div class="row   mt-4 w-75">


    <form class="d-flex justify-content-center align-items-center" asp-action="Index">
            <input  type="text" name="search" class="form-control  " placeholder="enter Search Value"   />
            <input type="submit" value="Search" class="btn btn-success " />
    </form>
   

    </div>
       

</div>

@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Name </td>
                <td>Department </td>
                <td>City </td>
                <td> Email </td>
                <td> Age </td>
                <td> Salary </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Name </td>
                    <td> @item.Department?.Name </td>
                    <td> @item.City </td>
                    <td> @item.Email </td>
                    <td> @item.age </td>
                    <td> @item.Salary </td>
                  
                  <partial name="ButtonPartial" model="@item.Id" />
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-dark text-light">
        <h2>  No Employee Available </h2>
    </div>
}



